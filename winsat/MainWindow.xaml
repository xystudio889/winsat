<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="winsat.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:winsat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="winsat"
    >

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid>
        <Grid.Resources>
            <!-- 自定义按钮样式 - 系统强调色背景，白色文字 -->
            <Style x:Key="SystemAccentButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{ThemeResource SystemAccentColor}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid x:Name="RootGrid">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <!-- 正常状态 -->
                                        <VisualState x:Name="Normal"/>

                                        <!-- 鼠标悬停状态：背景变亮，文字白色 -->
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="BackgroundBorder.Background" 
                                                    Value="{ThemeResource SystemAccentColorLight1}"/>
                                                <Setter Target="ContentPresenter.Foreground" 
                                                    Value="White"/>
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- 按下状态：背景再变亮，文字白色 -->
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Target="BackgroundBorder.Background" 
                                                    Value="{ThemeResource SystemAccentColorLight2}"/>
                                                <Setter Target="ContentPresenter.Foreground" 
                                                    Value="White"/>
                                            </VisualState.Setters>
                                        </VisualState>

                                        <!-- 禁用状态：背景灰色，文字黑色 -->
                                        <VisualState x:Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Target="BackgroundBorder.Background" 
                                                    Value="#ffa0a0a0"/>
                                                <Setter Target="ContentPresenter.Foreground" 
                                                    Value="Black"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <!-- 边框和背景 -->
                                <Border x:Name="BackgroundBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}">

                                    <!-- 内容区域 -->
                                    <ContentPresenter x:Name="ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  Foreground="{TemplateBinding Foreground}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <!-- Title Bar -->
            <RowDefinition Height="Auto" />
            <!-- App Content -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar x:Name="AppTitleBar"
              Title="WinSAT 跑分工具">
            <TitleBar.IconSource>
                <FontIconSource Glyph="&#xE770;"/>
            </TitleBar.IconSource>
        </TitleBar>
        <Grid Grid.Row="1">
            <!-- 主内容 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <TextBlock Grid.Row="1" FontSize="30" FontWeight="Bold" Text="WinSAT 跑分工具" Margin="10 2 0 0" />
                    <TextBlock Grid.Row="1" Text="CPU分数：无" Margin="10 2 0 0" x:Name="CPUScore" />
                    <TextBlock Grid.Row="1" Text="Direct3D分数：无" Margin="10 2 0 0" x:Name="D3DScore" />
                    <TextBlock Grid.Row="1" Text="硬盘分数：无" Margin="10 2 0 0" x:Name="DiskScore" />
                    <TextBlock Grid.Row="1" Text="图形分数：无" Margin="10 2 0 0" x:Name="GraphicsScore" />
                    <TextBlock Grid.Row="1" Text="内存分数：无" Margin="10 2 0 0" x:Name="MemoryScore" />
                    <TextBlock Grid.Row="1" Text="评估状态：无" Margin="10 2 0 0" x:Name="WinSATAssessmentState" />

                    <TextBlock Grid.Row="1" Text="总分(最小值)：无" Margin="10 20 0 0" x:Name="WinSPRLevel" FontSize="15" FontWeight="Bold" />
                    <Button Style="{StaticResource SystemAccentButtonStyle}" Content="开始跑分" Margin="10 5 0 0" Click="RunGetScore"></Button>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <Button Content="调试：显示窗口尺寸" Visibility="Collapsed" Click="Debug_WindowSize"></Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <!-- App content -->
        <Frame x:Name="rootFrame" Grid.Row="1"/>
    </Grid>
</Window>
